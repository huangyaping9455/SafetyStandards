<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.platform.jiaoyupeixun.mapper.JiaoyupeixunRenyuanMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="jiaoyupeixunRenyuanResultMap" type="org.springblade.platform.jiaoyupeixun.entity.JiaoyupeixunRenyuan">
        <id column="id" property="id"/>
        <result column="jiaoyupeixunid" property="jiaoyupeixunid"/>
        <result column="xingming" property="xingming"/>
        <result column="bumen" property="bumen"/>
        <result column="zhiwu" property="zhiwu"/>
        <result column="shifouxuexi" property="shifouxuexi"/>
        <result column="isdelete" property="isdelete"/>
    </resultMap>


    <select id="selectJiaoyupeixunRenyuanPage" resultMap="jiaoyupeixunRenyuanResultMap">
        select * from anbiao_jiaoyupeixun_renyuan where is_deleted = 0
    </select>

    <insert id="insertRenYuan" parameterType="org.springblade.platform.jiaoyupeixun.entity.JiaoyupeixunRenyuan">
        INSERT INTO anbiao_jiaoyupeixun_renyuan
        (jiaoyupeixunid,xingming,zhiwu,bumen,shifouxuexi,id,isdelete)
        VALUES
        (#{jiaoyupeixunid},#{xingming},#{zhiwu},#{bumen},#{shifouxuexi},#{id},#{isdelete})
    </insert>

    <update id="updateDel" parameterType="java.lang.String">
        UPDATE anbiao_jiaoyupeixun_renyuan SET isdelete = 1 where id = #{id}
    </update>

    <sql id="tableSql">
        SELECT
        a.*
        FROM
        anbiao_jiaoyupeixun_renyuan a
        WHERE 1=1 and ifnull(a.isdelete,0) = 0
        <if test="jiaoyupeixunid != null">
            AND a.jiaoyupeixunid = ${jiaoyupeixunid}
        </if>
    </sql>

    <sql id="querySql">
        <!--<if test="jiashiyuanxingming !=null and jiashiyuanxingming != ''">-->
            <!--AND jiashiyuanxingming  LIKE '%${jiashiyuanxingming}%'-->
        <!--</if>-->

    </sql>
    <sql id="orderSql">
        <!-- 默认排序规则 -->
        <if test="orderColumn == null or orderColumn == ''">
            order by bumen
        </if>
        <if test="orderColumn != null and orderColumn != ''">
            order by ${orderColumn}
        </if>
        <if test="orderColumn != null and orderColumn != '' and order != 0">
            desc
        </if>
    </sql>

    <select id="selectPageList" parameterType="org.springblade.platform.jiaoyupeixun.page.JiaoyupeixunRenyuanPage" resultType="org.springblade.platform.jiaoyupeixun.vo.JiaoyupeixunRenyuanVO">
        <if test="size == 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${total}
        </if>
        <if test="current != 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${offsetNo},${size}
        </if>
    </select>

    <select id="selectTotal" parameterType="org.springblade.platform.jiaoyupeixun.page.JiaoyupeixunRenyuanPage" resultType="int">
        select COUNT(1) from (
        <include refid="tableSql" />
        )d
        where 1 = 1
        <include refid="querySql" />
    </select>
</mapper>
