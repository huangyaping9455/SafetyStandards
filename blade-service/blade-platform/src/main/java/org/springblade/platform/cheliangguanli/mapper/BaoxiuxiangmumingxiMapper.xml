<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.platform.cheliangguanli.mapper.BaoxiuxiangmumingxiMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baoxiuxiangmumingxiResultMap" type="org.springblade.platform.cheliangguanli.entity.Baoxiuxiangmumingxi">
        <id column="id" property="id"/>
        <result column="weihuid" property="weihuid"/>
        <result column="caozuoren" property="caozuoren"/>
        <result column="caozuorenid" property="caozuorenid"/>
        <result column="caozuoshijian" property="caozuoshijian"/>
        <result column="baoxiuxiangmu" property="baoxiuxiangmu"/>
        <result column="gongshi" property="gongshi"/>
        <result column="gongfei" property="gongfei"/>
        <result column="isdelete" property="isdelete"/>
    </resultMap>


    <select id="selectBaoxiuxiangmumingxiPage" resultMap="baoxiuxiangmumingxiResultMap">
        select * from anbiao_baoxiuxiangmumingxi where is_deleted = 0
    </select>

    <update id="updateDel" parameterType="java.lang.String">
        UPDATE anbiao_baoxiuxiangmumingxi SET isdelete = 1 where id = #{id}
    </update>

    <sql id="tableSql">
        SELECT
        a.*
        FROM
        anbiao_baoxiuxiangmumingxi a
        INNER JOIN anbiao_cheliangweihu b ON a.weihuid = b.id and a.isdelete = 0 and  b.isdelete = 0
        INNER JOIN (
        <include refid="org.springblade.platform.guanlijigouherenyuan.mapper.OrganizationsMapper.getByDeptId"/>
        ) c on b.dept_id = c.id

    </sql>

    <sql id="querySql">
        <if test="weihuid !=null and weihuid != ''">
            AND weihuid = #{weihuid}
        </if>
    </sql>
    <sql id="orderSql">
        <!-- 默认排序规则 -->
        <if test="orderColumn == null or orderColumn == ''">
            order by caozuoshijian
        </if>
        <if test="orderColumn != null and orderColumn != ''">
            order by ${orderColumn}
        </if>
        <if test="orderColumn != null and orderColumn != '' and order != 0">
            desc
        </if>
    </sql>

    <select id="selectPageList" parameterType="org.springblade.platform.cheliangguanli.page.BaoxiuxiangmumingxiPage" resultType="org.springblade.platform.cheliangguanli.vo.BaoxiuxiangmumingxiVO">
        <if test="size == 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${total}
        </if>
        <if test="current != 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${offsetNo},${size}
        </if>
    </select>

    <select id="selectTotal" parameterType="org.springblade.platform.cheliangguanli.page.BaoxiuxiangmumingxiPage" resultType="int">
        select COUNT(1) from (
        <include refid="tableSql" />
        )d
        where 1 = 1
        <include refid="querySql" />
    </select>

    <select id="selectByIds" parameterType="java.lang.String" resultType="org.springblade.platform.cheliangguanli.vo.BaoxiuxiangmumingxiVO">
        SELECT
        a.*
        FROM
        anbiao_baoxiuxiangmumingxi a
        WHERE 1=1 and ifnull(a.isdelete ,0) = 0 and a.id=#{id}
    </select>
</mapper>
