<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.platform.cankaofangan.mapper.CankaofanganMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="cankaofanganResultMap" type="org.springblade.platform.cankaofangan.entity.Cankaofangan">
        <id column="id" property="id"/>
        <result column="renwuleixing" property="renwuleixing"/>
        <result column="fanganbiaoti" property="fanganbiaoti"/>
        <result column="path" property="path"/>
        <result column="caozuoren" property="caozuoren"/>
        <result column="caozuorenid" property="caozuorenid"/>
        <result column="caozuoshijian" property="caozuoshijian"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>


    <select id="selectCankaofanganPage" resultMap="cankaofanganResultMap">
        select * from anbiao_cankaofangan where is_deleted = 0
    </select>
    <!--根据任务类型获取参考方案-->
    <select id="getByRenwuleixing" resultType="org.springblade.platform.cankaofangan.entity.Cankaofangan">
        SELECT
            id,
            renwuleixing,
            fanganbiaoti,
            path,
            caozuoren,
            caozuorenid,
            caozuoshijian,
            is_deleted
        FROM
            anbiao_cankaofangan where is_deleted=0 and renwuleixing=#{renwuleixing}
    </select>

</mapper>
