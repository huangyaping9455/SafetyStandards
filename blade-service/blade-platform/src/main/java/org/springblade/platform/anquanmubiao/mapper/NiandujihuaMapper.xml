<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.platform.anquanmubiao.mapper.NiandujihuaMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="niandujihuaResultMap" type="org.springblade.platform.anquanmubiao.entity.Niandujihua">
        <id column="id" property="id"/>
        <result column="dept_id" property="deptId"/>
        <result column="caozuoren" property="caozuoren"/>
        <result column="caozuorenid" property="caozuorenid"/>
        <result column="caozuoshijian" property="caozuoshijian"/>
        <result column="guihuaid" property="guihuaid"/>
        <result column="jihuamingcheng" property="jihuamingcheng"/>
        <result column="jihualeixing" property="jihualeixing"/>
        <result column="zhidingriqi" property="zhidingriqi"/>
        <result column="jihuaneirong" property="jihuaneirong"/>
        <result column="fujian" property="fujian"/>
        <result column="isdelete" property="isdelete"/>
    </resultMap>


    <select id="selectNiandujihuaPage" resultMap="niandujihuaResultMap">
        select * from anbiao_niandujihua where is_deleted = 0
    </select>

    <update id="updateDel" parameterType="java.lang.String">
        UPDATE anbiao_niandujihua SET isdelete = 1 where id = #{id}
    </update>

    <insert id="insertNianDuJiHua" parameterType="org.springblade.platform.anquanmubiao.entity.Niandujihua" >
        INSERT INTO anbiao_niandujihua
           (id,dept_id,caozuoren,caozuorenid,caozuoshijian,guihuaid,jihuamingcheng,jihualeixing,zhidingriqi,jihuaneirong,fujian,isdelete)
        VALUES
           (#{id},#{dept_id},#{caozuoren},#{caozuorenid},#{caozuoshijian},#{guihuaid},#{jihuamingcheng},#{jihualeixing},#{zhidingriqi},#{jihuaneirong},
              #{fujian},#{isdelete})
    </insert>

    <sql id="tableSql">
        SELECT
        a.*,b.dept_name as deptName
        FROM
        anbiao_niandujihua a
        inner join  (
        <include refid="org.springblade.platform.guanlijigouherenyuan.mapper.OrganizationsMapper.getByDeptId"/>
        ) b
        on a.dept_id = b.id
        WHERE 1=1 and ifnull(a.isdelete,0) = 0

    </sql>

    <sql id="querySql">
        <if test="deptName !=null and deptName != ''">
            AND deptName LIKE '%${deptName}%'
        </if>
        <if test="guihuaid !=null and guihuaid != ''">
            AND guihuaid = #{guihuaid}
        </if>
    </sql>
    <sql id="orderSql">
        <!-- 默认排序规则 -->
        <if test="orderColumn == null or orderColumn == ''">
            order by caozuoshijian
        </if>
        <if test="orderColumn != null and orderColumn != ''">
            order by ${orderColumn}
        </if>
        <if test="orderColumn != null and orderColumn != '' and order != 0">
            desc
        </if>
    </sql>

    <select id="selectPageList" parameterType="org.springblade.platform.anquanmubiao.page.NiandujihuaPage" resultType="org.springblade.platform.anquanmubiao.vo.NiandujihuaVO">
        <if test="size == 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${total}
        </if>
        <if test="current != 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${offsetNo},${size}
        </if>
    </select>

    <select id="selectTotal" parameterType="org.springblade.platform.anquanmubiao.page.NiandujihuaPage" resultType="int">
        select COUNT(1) from (
        <include refid="tableSql" />
        )d
        where 1 = 1
        <include refid="querySql" />
    </select>

    <select id="selectByIds" parameterType="java.lang.String" resultType="org.springblade.platform.anquanmubiao.vo.NiandujihuaVO">
        SELECT
        a.*,b.dept_name
        FROM
        anbiao_niandujihua a
        inner join  blade_dept b
        on a.dept_id = b.id
        WHERE 1=1 and ifnull(a.isdelete ,0) = 0 and a.id=#{id}
    </select>
</mapper>
