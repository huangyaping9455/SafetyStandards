<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.platform.cheliangguanli.mapper.XincheyanshoumingxiMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="xincheyanshoumingxiResultMap" type="org.springblade.platform.cheliangguanli.entity.Xincheyanshoumingxi">
        <id column="id" property="id"/>
        <result column="xincheyanshouid" property="xincheyanshouid"/>
        <result column="jianchaxiangid" property="jianchaxiangid"/>
        <result column="shifouhege" property="shifouhege"/>
        <result column="beizhu" property="beizhu"/>
        <result column="shifoumoban" property="shifoumoban"/>
        <result column="caozuoshijian" property="caozuoshijian"/>
        <result column="caozuoren" property="caozuoren"/>
        <result column="caozuorenid" property="caozuorenid"/>
        <result column="isdelete" property="isdelete"/>
    </resultMap>


    <select id="selectXincheyanshoumingxiPage" resultMap="xincheyanshoumingxiResultMap">
        select * from anbiao_xincheyanshoumingxi where is_deleted = 0
    </select>

    <update id="updateDel" parameterType="java.lang.String">
        UPDATE anbiao_xincheyanshoumingxi SET isdelete = 1 where id = #{id}
    </update>

    <sql id="tableSql">
        SELECT
        a.*, d.dept_name as deptName, b.leixing, b.xiangmumingcheng, b.jianyanyaoqiufangfa
        FROM
        anbiao_xincheyanshoumingxi a
       INNER join anbiao_xincheyanshou c on c.id = a.xincheyanshouid
        INNER JOIN (
        <include refid="org.springblade.platform.guanlijigouherenyuan.mapper.OrganizationsMapper.getByDeptId"/>
        ) d on c.dept_id = d.id
        LEFT JOIN anbiao_xincheyanshoujianchaxiang b on a.jianchaxiangid = b.id

    </sql>

    <sql id="querySql">
        <if test="deptName !=null and deptName != ''">
            AND deptName LIKE '%${deptName}%'
        </if>
        <if test="xincheyanshouid !=null and xincheyanshouid != ''">
            AND xincheyanshouid = #{xincheyanshouid}
        </if>
    </sql>
    <sql id="orderSql">
        <!-- 默认排序规则 -->
        <if test="orderColumn == null or orderColumn == ''">
            order by caozuoshijian
        </if>
        <if test="orderColumn != null and orderColumn != ''">
            order by ${orderColumn}
        </if>
        <if test="orderColumn != null and orderColumn != '' and order != 0">
            desc
        </if>
    </sql>

    <select id="selectPageList" parameterType="org.springblade.platform.cheliangguanli.page.XincheyanshoumingxiPage" resultType="org.springblade.platform.cheliangguanli.vo.XincheyanshoumingxiVO">
        <if test="size == 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${total}
        </if>
        <if test="current != 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${offsetNo},${size}
        </if>
    </select>

    <select id="selectTotal" parameterType="org.springblade.platform.cheliangguanli.page.XincheyanshoumingxiPage" resultType="int">
        select COUNT(1) from (
        <include refid="tableSql" />
        )d
        where 1 = 1
        <include refid="querySql" />
    </select>

    <select id="selectByIds" parameterType="java.lang.String" resultType="org.springblade.platform.cheliangguanli.vo.XincheyanshoumingxiVO">
       SELECT
        a.*, d.dept_name as deptName, b.leixing, b.xiangmumingcheng, b.jianyanyaoqiufangfa
        FROM
        anbiao_xincheyanshoumingxi a
       INNER JOIN anbiao_xincheyanshoujianchaxiang b on a.jianchaxiangid = b.id
       INNER join anbiao_xincheyanshou c on c.id = a.xincheyanshouid
        INNER join blade_dept d on c.dept_id = d.id
        WHERE 1=1 and ifnull(a.isdelete ,0) = 0 and a.id=#{id}
    </select>

    <select id="selectJianChaXiang" resultType="org.springblade.platform.cheliangguanli.vo.XincheyanshoumingxiVO">
        SELECT
        a.*
        FROM
        anbiao_xincheyanshoujianchaxiang a

    </select>
</mapper>
