    <select id = "selectByCar" parameterType="java.lang.String" resultType="org.springblade.platform.cheliangguanli.entity.Vehicle">
        select
            b.id,b.dept_id,b.cheliangpaizhao,b.chepaiyanse,b.shiyongxingzhi
        from
            anbiao_cheliang_jiashiyuan a,
            (
                select
