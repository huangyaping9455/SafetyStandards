<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springblade.platform.anquanmubiao.mapper.MubiaokaoheMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="mubiaokaoheResultMap" type="org.springblade.platform.anquanmubiao.entity.Mubiaokaohe">
        <id column="id" property="id"/>
        <result column="dept_id" property="deptId"/>
        <result column="caozuoren" property="caozuoren"/>
        <result column="caozuorenid" property="caozuorenid"/>
        <result column="caozuoshijian" property="caozuoshijian"/>
        <result column="aid" property="aid"/>
        <result column="isdelete" property="isdelete"/>
    </resultMap>


    <select id="selectMubiaokaohePage" resultMap="mubiaokaoheResultMap">
        select * from anbiao_mubiaokaohe where is_deleted = 0
    </select>

    <update id="updateDel" parameterType="java.lang.String">
        UPDATE anbiao_mubiaokaohe SET isdelete = 1 where id = #{id}
    </update>

    <insert id="insertMuBiaoKaoHe" parameterType="org.springblade.platform.anquanmubiao.entity.Mubiaokaohe" >
        INSERT INTO anbiao_mubiaokaohe
         (id,dept_id,caozuoren,caozuorenid,caozuoshijian,aid,isdelete)
        VALUES
         (#{id},#{dept_id},#{caozuoren},#{caozuorenid},#{caozuoshijian},#{aid},#{isdelete})
    </insert>

    <sql id="tableSql">
        SELECT
        a.*,b.dept_name as deptName
        FROM
        anbiao_mubiaokaohe a
        inner join  (
        <include refid="org.springblade.platform.guanlijigouherenyuan.mapper.OrganizationsMapper.getByDeptId"/>
        ) b
        on a.dept_id = b.id
        WHERE 1=1 and ifnull(a.isdelete,0) = 0

    </sql>

    <sql id="querySql">
        <if test="deptName !=null and deptName != ''">
            AND deptName LIKE '%${deptName}%'
        </if>
        <if test="aid !=null and aid != ''">
            AND aid = #{aid}
        </if>
    </sql>
    <sql id="orderSql">
        <!-- 默认排序规则 -->
        <if test="orderColumn == null or orderColumn == ''">
            order by caozuoshijian
        </if>
        <if test="orderColumn != null and orderColumn != ''">
            order by ${orderColumn}
        </if>
        <if test="orderColumn != null and orderColumn != '' and order != 0">
            desc
        </if>
    </sql>

    <select id="selectPageList" parameterType="org.springblade.platform.anquanmubiao.page.MubiaokaohePage" resultType="org.springblade.platform.anquanmubiao.vo.MubiaokaoheVO">
        <if test="size == 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${total}
        </if>
        <if test="current != 0" >
            select * from (
            <include refid="tableSql" />
            )b
            where 1=1
            <include refid="querySql" />
            <include refid="orderSql" />
            limit ${offsetNo},${size}
        </if>
    </select>

    <select id="selectTotal" parameterType="org.springblade.platform.anquanmubiao.page.MubiaokaohePage" resultType="int">
        select COUNT(1) from (
        <include refid="tableSql" />
        )d
        where 1 = 1
        <include refid="querySql" />
    </select>

    <select id="selectByIds" parameterType="java.lang.String" resultType="org.springblade.platform.anquanmubiao.vo.MubiaokaoheVO">
        SELECT
        a.*,b.dept_name
        FROM
        anbiao_mubiaokaohe a
        inner join  blade_dept b
        on a.dept_id = b.id
        WHERE 1=1 and ifnull(a.isdelete ,0) = 0 and a.id=#{id}
    </select>
</mapper>
